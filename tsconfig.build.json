{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    // 使用的是什么版本
    "declaration": true,
    // 对每个ts文件都生成一个d.ts文件
    "allowSyntheticDefaultImports": true,
    // 支持import React from 'react' 这种引入方式
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [ // 要编译的文件
    "src"
  ],
  "exclude": [
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx",
    "src/setupTests.ts"
  ]
}
